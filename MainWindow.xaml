<Window x:Class="hourglass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Circular Measure" Height="400" Width="400">

    <Grid x:Name="MainGrid" Background="White">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Circular measure -->
            <Grid Width="200" Height="200">
                <Ellipse Stroke="LightGray" StrokeThickness="20"/>
                <Path x:Name="ProgressArc" Stroke="DodgerBlue" StrokeThickness="20"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      Fill="Transparent"/>
                <TextBlock x:Name="PercentageText" Text="50%" 
                           FontSize="32" FontWeight="Bold" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Change Background" Width="150" Height="40"
                        Click="ChangeBackground_Click"/>
                <Button Content="Increase %" Width="100" Height="40"
                        Click="Increase_Click"/>
                <Button Content="Decrease %" Width="100" Height="40"
                        Click="Decrease_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
